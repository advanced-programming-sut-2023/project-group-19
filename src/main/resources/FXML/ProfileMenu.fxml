<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Text?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.ProfileMenu"
      prefHeight="400.0" prefWidth="600.0" >
    <VBox  translateY="10" translateX="10" spacing="20">
        <ImageView fx:id="avatar"/>
        <Button text="select image" onMouseClicked="#hideShowSelectImage"/>
    </VBox>
    <VBox visible="false" fx:id="vBoxOfSelectImage" spacing="20" alignment="CENTER" translateX="200" translateY="100" style="-fx-background-color: #6df34e">
        <HBox spacing="30" alignment="CENTER">
            <ImageView fx:id="imageView1"/>
            <ImageView fx:id="imageView2"/>
            <ImageView fx:id="imageView3"/>
        </HBox>
        <HBox spacing="30" alignment="CENTER">
            <ImageView fx:id="imageView4"/>
            <ImageView fx:id="imageView5"/>
            <ImageView fx:id="imageView6"/>
        </HBox>
        <HBox spacing="30" alignment="CENTER">
            <ImageView fx:id="imageView7"/>
            <ImageView fx:id="imageView8"/>
            <ImageView fx:id="imageView9"/>
        </HBox>
        <Button text="select" onMouseClicked="#ChooseFileFromSystem"/>
    </VBox>
    <Label text="Fill register form" fx:id="label" translateX="700" translateY="170"/>
    <VBox alignment="CENTER" spacing="30" translateX="700" translateY="240">
        <TextField fx:id="username"  promptText="Username"/>
        <TextField fx:id="email"  promptText="Email"/>
        <TextField fx:id="nickname" promptText="Nickname"/>
        <TextField fx:id="slogan"  promptText="slogan"/>
        <HBox spacing="20">
            <Button text="remove" onMouseClicked="#removeSlogan"/>
            <Button text="change password" onMouseClicked="#changePassword"/>
        </HBox>
        <Button onMouseClicked="#submit" text="submit" focusTraversable="false"/>
    </VBox>

    <VBox visible="false" fx:id="captchaBox" spacing="20" alignment="CENTER" translateY="240" translateX="250">
        <ImageView fx:id="captchaImage"/>
        <HBox spacing="20">
            <TextField fx:id="answerOfCaptcha" maxWidth="100"/>
            <Button text="again" onMouseClicked="#anotherCaptcha"/>
        </HBox>
    </VBox>
    <VBox spacing="20" alignment="CENTER" visible="false" fx:id="passwordBox" translateX="1000" translateY="400"
          style="-fx-background-color: #4aea4a">
        <Label style="-fx-text-fill: red" fx:id="oldPasswordError" text="test test 1"/>
        <TextField promptText="Old password" fx:id="oldPassword"/>
        <Label style="-fx-text-fill: red" fx:id="newPasswordError" text="test test 1"/>
        <TextField promptText="New password" fx:id="newPassword"/>
        <Label style="-fx-text-fill: red" fx:id="confirmPasswordError" text="test test 1"/>
        <TextField promptText="Retype new password" fx:id="RetypeNewPassword"/>
    </VBox>



    <VBox translateX="740" translateY="220" spacing="40" alignment="CENTER" fx:id="vBoxErrorHandling" visible="false">
        <Label style="-fx-text-fill: red" fx:id="usernameError" text="random text 1"/>
        <Label style="-fx-text-fill: red" fx:id="emailError" text="random text 3"/>
        <Label style="-fx-text-fill: red" fx:id="nicknameError" text="random text 4"/>
        <Label style="-fx-text-fill: red" fx:id="sloganError" text="random text 5"/>
    </VBox>

</Pane>
