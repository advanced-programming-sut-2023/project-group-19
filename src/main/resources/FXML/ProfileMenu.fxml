<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<Pane xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="view.ProfileMenu"
      prefHeight="400.0" prefWidth="600.0">
    <VBox  translateY="10" translateX="10" spacing="20">
        <ImageView fx:id="avatar"/>
        <Button text="select image"/>
    </VBox>
    <VBox spacing="20" alignment="CENTER" translateX="200" translateY="100" style="-fx-background-color: #6df34e">
        <HBox spacing="30" alignment="CENTER">
            <ImageView fx:id="imageView1"/>
            <ImageView fx:id="imageView2"/>
            <ImageView fx:id="imageView3"/>
        </HBox>
        <HBox spacing="30" alignment="CENTER">
            <ImageView fx:id="imageView4"/>
            <ImageView fx:id="imageView5"/>
            <ImageView fx:id="imageView6"/>
        </HBox>
        <HBox spacing="30" alignment="CENTER">
            <ImageView fx:id="imageView7"/>
            <ImageView fx:id="imageView8"/>
            <ImageView fx:id="imageView9"/>
        </HBox>
        <Button text="select" onMouseClicked="#ChooseFileFromSystem"/>
    </VBox>

</Pane>
